{
  "meta": {
    "name": "Dados & Risas Design Tokens",
    "version": "1.0.0",
    "description": "Canonical single-source-of-truth design tokens for the Dados & Risas overlay system. Edit this file and run `bun run generate:tokens` to regenerate control-panel and overlay CSS."
  },
  "colors": {
    "--black":           { "value": "#000000",                    "description": "Global canvas / app background" },
    "--black-card":      { "value": "#0d0d0d",                    "description": "Card surfaces" },
    "--black-elevated":  { "value": "#1a1a1a",                    "description": "Elevated surfaces, inputs, popovers" },
    "--white":           { "value": "#ffffff",                    "description": "Primary text" },
    "--grey":            { "value": "#888888",                    "description": "Secondary / muted text" },
    "--grey-dim":        { "value": "#333333",                    "description": "Subtle borders and dividers" },
    "--red":             { "value": "#ff4d6a",                    "description": "Primary action / damage / critical state" },
    "--red-dim":         { "value": "rgba(255, 77, 106, 0.12)",   "description": "Red tint for hover/active backgrounds" },
    "--cyan":            { "value": "#00d4e8",                    "description": "Accent / healing / connection indicator" },
    "--cyan-dim":        { "value": "rgba(0, 212, 232, 0.12)",    "description": "Cyan tint for hover/active backgrounds" },
    "--purple":          { "value": "#500df5",                    "description": "Dice / d20 highlight" },
    "--purple-dim":      { "value": "rgba(80, 13, 245, 0.12)",    "description": "Purple tint for hover/active backgrounds" },
    "--purple-mid":      { "value": "rgba(80, 13, 245, 0.5)",     "description": "Mid-opacity purple for borders" }
  },
  "hp": {
    "--hp-healthy":      { "value": "#22c55e",  "description": "HP bar — healthy (>50%)" },
    "--hp-injured":      { "value": "#f59e0b",  "description": "HP bar — injured (25–50%)" },
    "--hp-critical":     { "value": "#ff4d6a",  "description": "HP bar — critical (<25%)" },
    "--hp-healthy-dim":  { "value": "#15803d",  "description": "HP gradient start — healthy" },
    "--hp-injured-dim":  { "value": "#b45309",  "description": "HP gradient start — injured" },
    "--hp-critical-dim": { "value": "#991b1b",  "description": "HP gradient start — critical" }
  },
  "typography": {
    "--font-display": { "value": "\"Bebas Neue\", \"Impact\", \"Arial Black\", sans-serif", "description": "Headings, labels, brand text" },
    "--font-script":  { "value": "\"Dancing Script\", cursive",                            "description": "Brand ampersand (& Risas)" },
    "--font-mono":    { "value": "\"JetBrains Mono\", \"Courier New\", monospace",         "description": "Numbers, HP values, dice results" },
    "--font-ui":      { "value": "system-ui, -apple-system, BlinkMacSystemFont, sans-serif", "description": "Body text, form elements" }
  },
  "spacing": {
    "--space-half": { "value": "2px",  "description": "Half-step for tight layouts" },
    "--space-1":    { "value": "4px",  "description": "4px base unit" },
    "--space-2":    { "value": "8px",  "description": "2× base unit" },
    "--space-3":    { "value": "12px", "description": "3× base unit" },
    "--space-4":    { "value": "16px", "description": "4× base unit" },
    "--space-5":    { "value": "20px", "description": "5× base unit" },
    "--space-6":    { "value": "24px", "description": "6× base unit" },
    "--space-8":    { "value": "32px", "description": "8× base unit" },
    "--space-10":   { "value": "40px", "description": "10× base unit" },
    "--space-12":   { "value": "48px", "description": "12× base unit" }
  },
  "radii": {
    "--radius-sm":   { "value": "4px",   "description": "Small — buttons, tags" },
    "--radius-md":   { "value": "8px",   "description": "Medium — cards, inputs" },
    "--radius-lg":   { "value": "12px",  "description": "Large — modals, panels" },
    "--radius-pill": { "value": "999px", "description": "Pill badges" }
  },
  "shadows": {
    "--shadow-card":   { "value": "4px 4px 0px rgba(255, 255, 255, 0.05)", "description": "Default card shadow (control panel)" },
    "--shadow-red":    { "value": "3px 3px 0px #ff4d6a",                   "description": "Red pixel-art accent shadow" },
    "--shadow-cyan":   { "value": "3px 3px 0px #00d4e8",                   "description": "Cyan pixel-art accent shadow" },
    "--shadow-purple": { "value": "4px 4px 0px #500df5",                   "description": "Purple pixel-art accent shadow" }
  },
  "motion": {
    "--t-fast":   { "value": "150ms ease",                          "description": "Fast micro-interactions" },
    "--t-normal": { "value": "250ms ease",                          "description": "Standard transitions" },
    "--t-spring": { "value": "280ms cubic-bezier(0.34, 1.56, 0.64, 1)", "description": "Springy entrance animations" }
  },
  "alpha": {
    "--alpha-subtle":  { "value": "0.04", "description": "Barely-there background tint" },
    "--alpha-dim":     { "value": "0.12", "description": "Dim overlay / hover fill" },
    "--alpha-medium":  { "value": "0.35", "description": "Medium translucency" },
    "--alpha-overlay": { "value": "0.65", "description": "Modal / drawer backdrop" },
    "--alpha-solid":   { "value": "0.88", "description": "Near-opaque surface" }
  },
  "zIndex": {
    "--z-sidebar-backdrop": { "value": "30", "description": "Sidebar backdrop layer" },
    "--z-sidebar":          { "value": "40", "description": "Sidebar panel layer" },
    "--z-nav":              { "value": "50", "description": "Bottom navigation layer" },
    "--z-modal-backdrop":   { "value": "60", "description": "Modal backdrop layer" },
    "--z-modal":            { "value": "70", "description": "Modal panel layer" }
  },
  "overlayGradients": {
    "--gradient-healthy":  { "value": "linear-gradient(90deg, #15803d, #22c55e)", "description": "HP bar gradient — healthy (overlay-only shorthand)" },
    "--gradient-injured":  { "value": "linear-gradient(90deg, #b45309, #f59e0b)", "description": "HP bar gradient — injured (overlay-only shorthand)" },
    "--gradient-critical": { "value": "linear-gradient(90deg, #991b1b, #ff4d6a)", "description": "HP bar gradient — critical (overlay-only shorthand)" }
  }
}
